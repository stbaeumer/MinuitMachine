{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Blazor WebAssembly App",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build MinuitMachine.Client",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/MinuitMachine.Client",
        "--non-interactive"
      ],
      "cwd": "${workspaceFolder}/src/MinuitMachine.Client",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      }
    }
  ]
}
