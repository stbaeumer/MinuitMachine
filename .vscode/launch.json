{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MinuitMachine.Client (Blazor WASM)",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/MinuitMachine.Client",
      "browser": "chrome",
      "trace": false
    },
    {
      "name": "Run MinuitMachine.Client (dotnet run)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build MinuitMachine.Client",
      "program": "/usr/bin/dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/MinuitMachine.Client"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}
